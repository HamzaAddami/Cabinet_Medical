<!DOCTYPE html>

<title>Secretaire index</title>

{% block body %}
    <h1>Secretaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomSec</th>
                <th>PrenomSec</th>
                <th>NumTel</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for secretaire in secretaires %}
            <tr>
                <td>{{ secretaire.id }}</td>
                <td>{{ secretaire.nomSec }}</td>
                <td>{{ secretaire.prenomSec }}</td>
                <td>{{ secretaire.numTel }}</td>
                <td>{{ secretaire.adresse }}</td>
                <td>
                    <a href="{{ path('app_secretaire_show', {'id': secretaire.id}) }}">show</a>
                    <a href="{{ path('app_secretaire_edit', {'id': secretaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_secretaire_new') }}">Create new</a>
{% endblock %}
