{% extends 'base.html.twig' %}
   
{% block title %}Secretaire{% endblock %}

{% block body %}
    <h1>Secretaire index</h1>

    <table class="table table-striped container">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomSec</th>
                <th>PrenomSec</th>
                <th>NumTel</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for secretaire in secretaires %}
            <tr>
                <td>{{ secretaire.id }}</td>
                <td>{{ secretaire.nomSec }}</td>
                <td>{{ secretaire.prenomSec }}</td>
                <td>{{ secretaire.numTel }}</td>
                <td>{{ secretaire.adresse }}</td>
                <td>
                    <a href="{{ path('app_secretaire_show', {'id': secretaire.id}) }}">show</a> |
                    <a href="{{ path('app_secretaire_edit', {'id': secretaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a class="btn btn-primary" href="{{ path('app_secretaire_new') }}">
            <i class="fas fa-plus"></i> Create new
        </a>

        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_secretaire_index', {'page': currentPage - 1}) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo; Précédent</span>
                        </a>
                    </li>
                {% endif %}

                <li class="page-item disabled">
                    <span class="page-link">Page {{ currentPage }} sur {{ totalPages }}</span>
                </li>

                {% if currentPage < totalPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_secretaire_index', {'page': currentPage + 1}) }}" aria-label="Next">
                            <span aria-hidden="true">Suivant &raquo;</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>
{% endblock %}
