<!DOCTYPE html>

<title>Patient index</title>

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomPatient</th>
                <th>PrenomPatient</th>
                <th>Sexe</th>
                <th>Adresse</th>
                <th>NumTel</th>
                <th>DateNaissance</th>
                <th>Assurance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nomPatient }}</td>
                <td>{{ patient.prenomPatient }}</td>
                <td>{{ patient.sexe }}</td>
                <td>{{ patient.adresse }}</td>
                <td>{{ patient.numTel }}</td>
                <td>{{ patient.dateNaissance ? patient.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ patient.assurance }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
