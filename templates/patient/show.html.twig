{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>NomPatient</th>
                <td>{{ patient.nomPatient }}</td>
            </tr>
            <tr>
                <th>PrenomPatient</th>
                <td>{{ patient.prenomPatient }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ patient.sexe }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ patient.adresse }}</td>
            </tr>
            <tr>
                <th>NumTel</th>
                <td>{{ patient.numTel }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ patient.dateNaissance ? patient.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Assurance</th>
                <td>{{ patient.assurance }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_patient_index') }}">back to list</a>

    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>

    {{ include('patient/_delete_form.html.twig') }}
{% endblock %}
