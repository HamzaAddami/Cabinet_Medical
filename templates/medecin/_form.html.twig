{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">Doctor Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.nomMed, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nomMed, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.nomMed) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.prenomMed, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prenomMed, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.prenomMed) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.specialite, 'Specialty', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.specialite) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.numTel, 'Phone Number', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.numTel, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.numTel) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form.adresse, 'Address', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.adresse) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <button class="btn btn-primary btn-lg">{{ button_label|default('Save Doctor') }}</button>
</div>

{{ form_end(form) }}