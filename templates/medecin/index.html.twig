{% extends 'base.html.twig' %}
   
{% block title %}Medecin {% endblock %}


{% block body %}
    <h1>Medecins</h1>

    <table class="table table-striped container">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomMed</th>
                <th>PrenomMed</th>
                <th>Specialite</th>
                <th>NumTel</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medecin in medecins %}
            <tr>
                <td>{{ medecin.id }}</td>
                <td>{{ medecin.nomMed }}</td>
                <td>{{ medecin.prenomMed }}</td>
                <td>{{ medecin.specialite }}</td>
                <td>{{ medecin.numTel }}</td>
                <td>{{ medecin.adresse }}</td>
                <td>
                    <a href="{{ path('app_medecin_show', {'id': medecin.id}) }}">show</a> |
                    <a href="{{ path('app_medecin_edit', {'id': medecin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a class="btn btn-primary" href="{{ path('app_medecin_new') }}">
            <i class="fas fa-plus"></i> Create new
        </a>

        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_medecin_index', {'page': currentPage - 1}) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo; Précédent</span>
                        </a>
                    </li>
                {% endif %}

                <li class="page-item disabled">
                    <span class="page-link">Page {{ currentPage }} sur {{ totalPages }}</span>
                </li>

                {% if currentPage < totalPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_medecin_index', {'page': currentPage + 1}) }}" aria-label="Next">
                            <span aria-hidden="true">Suivant &raquo;</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>
{% endblock %}
